<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapNotePad.Views.StartPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="Pic.png" HorizontalOptions="Center" VerticalOptions="Center"/>
        </StackLayout>
        <StackLayout Grid.Row="1" Padding="20,0">
            <Button Text="Log in" Margin="0,0,0,20" FontSize="Medium" Command="{Binding LogInCommand}" />
            <Button Text="Create account" Style="{StaticResource buttonStyle}" FontSize="Medium" Command="{Binding RegisterCommand}" />
        </StackLayout>
    </Grid>
</ContentPage>