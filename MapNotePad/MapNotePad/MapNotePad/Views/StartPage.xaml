<?xml version="1.0" encoding="utf-8" ?>
<view:BaseContentPage  xmlns:view="clr-namespace:MapNotePad.Views" 
                       xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapNotePad.Views.StartPage">
    <view:BaseContentPage.Content>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
                <Image Style="{DynamicResource Logo}"/>
                    <Label Style="{DynamicResource TextBrend}"/> 
        </StackLayout>
        <StackLayout Grid.Row="1" Padding="20,0">
            <Button Text="Log in" Margin="0,0,0,20" Command="{Binding LogInCommand}" />
            <Button Text="Create account" Style="{StaticResource buttonStyle}" Command="{Binding RegisterCommand}" />
        </StackLayout>
    </Grid>
    </view:BaseContentPage.Content>
</view:BaseContentPage>